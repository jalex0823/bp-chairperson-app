# Back Porch Chair App Environment Variables
# Copy this file to .env and fill in your values

# Flask Secret Key (generate a random string)
SECRET_KEY=your-random-secret-key-here

# Database Configuration
# Option 1: Use DATABASE_URL (for Heroku Postgres or other hosted DB)
# DATABASE_URL=postgresql://user:password@your-host:5432/your-database-name

# Option 2: Individual database variables (if DATABASE_URL not set)
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=backporch
DB_USER=chairperson
DB_PASSWORD=your-db-password

# Email Configuration (DreamHost SMTP)
MAIL_SERVER=smtp.dreamhost.com
MAIL_PORT=465
MAIL_USE_SSL=True
MAIL_USE_TLS=False
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_DEFAULT_SENDER=noreply@backporchmeetings.org

# Chairperson registration: current unlock key (users enter this to show the form)
REGISTRATION_ACCESS_CODE=

# Optional: comma-separated list of additional valid keys
# REGISTRATION_ACCESS_CODES=key2,key3

# Suspended keys: comma-separated list of old keys that must no longer work
# REGISTRATION_ACCESS_SUSPENDED_KEYS=old-key-1,old-key-2

# Login security tuning (mobile-friendly defaults)
ENABLE_ACCOUNT_LOCKOUT=True
MAX_FAILED_LOGIN_ATTEMPTS=10
LOCKOUT_MINUTES=10
ALLOW_PASSWORD_TRIM_ON_LOGIN=True
ALLOW_LOCKED_ACCOUNT_LOGIN_IF_PASSWORD_CORRECT=True